<?xml version = "1.0" encoding = "utf-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
	<class name = "gogame.server.game.Game" table = "Games">
		<meta attribute="class-description">
			This class contains the game details.
		</meta>
	
		<id name = "id" type = "int" column = "id">
			<generator class ="native"/>
		</id>
		
		<property name = "size" column = "size" type = "int"/>
		<property name = "whitePrisoners" column = "white_prisoners" type = "int"/>
		<property name = "blackPrisoners" column = "black_prisoners" type = "int"/>	
	</class>
</hibernate-mapping>