<?xml version="1.0" encoding="UTF-8"?>
<!DOCTYPE hibernate-mapping PUBLIC 
"-//Hibernate/Hibernate Mapping DTD//EN"
"http://www.hibernate.org/dtd/hibernate-mapping-3.0.dtd"> 

<hibernate-mapping>
   <class name = "gogame.server.game.Stone" table = "Stones">
      
      <meta attribute = "class-description">
         This class contains the stone details. 
      </meta>
     <id name = "id" type ="int" column = "id">
     	<generator class="native"/>
     </id>
      
      <property name = "x" column = "x" type = "int"/>
      <property name = "y" column = "y"  type = "int"/>
      <property name = "color" column = "color"  type = "string"/>
      <property name = "gameId" column = "game_id" type = "int"/>
      
   </class>
</hibernate-mapping>