package gogame.client.game.gui;

import javax.swing.JButton;
import javax.swing.JFrame;
import javax.swing.JLabel;

public class GameGUI extends JFrame {

	
	public void gameFrame(){
		JFrame frame = new JFrame();
		frame.setSize(900,900);
		frame.setVisible(true);
		frame.setDefaultCloseOperation(EXIT_ON_CLOSE);
		frame.setVisible(true);	
		

	    JButton buttonConnect = new JButton("connect ");
	    JButton buttonSize9 = new JButton("9");
	    JButton buttonSize13 = new JButton("13");
	    JButton buttonSize19 = new JButton("19");
	    JButton buttonGameMulti = new JButton("Multiplayer");
	    JButton buttonGameSingle = new JButton("Singleplayer");
	    JButton buttonExit = new JButton("EXIT");
	    JButton buttonPass = new JButton("PASS");
	    JLabel labelTurn = new JLabel("TURN");
	   
	    int tempShift =150;  
	    buttonConnect.setBounds(50,50 +tempShift,200,50);
	    buttonGameSingle.setBounds(50,100 +tempShift,200,50);
	    buttonGameMulti.setBounds(50,150 +tempShift,200,50);
	    buttonSize9.setBounds(50,200 +tempShift,200,50);
	    buttonSize13.setBounds(50,250 +tempShift,200,50);
	    buttonSize19.setBounds(50,300 +tempShift,200,50);
	    buttonExit.setBounds(50,350 +tempShift,200,50);
	    buttonPass.setBounds(50,400 +tempShift,200,50);
	    labelTurn.setBounds(50,450 +tempShift,200,50);
	    
	    frame.add(buttonConnect);
	    frame.add(buttonSize9);
	    frame.add(buttonSize13);
	    frame.add(buttonSize19);
	    frame.add(buttonGameMulti);
	    frame.add(buttonGameSingle);
	    frame.add(buttonExit);
	    frame.add(buttonPass);
	    frame.add(labelTurn);
	 
	    
	    
	    
	  
        
      
         repaint();
	}
public static void main(String[] args) {
	
      GameGUI gameGUI= new GameGUI();
      gameGUI.gameFrame();
		
	}
	
}
