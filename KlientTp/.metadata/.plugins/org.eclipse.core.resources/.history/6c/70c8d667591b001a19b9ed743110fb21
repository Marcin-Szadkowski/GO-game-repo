package gogame.client.game.performance;

import gogame.client.gui.GameGUI;

public class Game {
	
	      public int xMoved;
	      public int yMoved;
		  private static Game instance = null;
		  private  Game(){

		  }
		  public static Game getInstance(){
		    if(instance==null){
		       instance = new Game();
		      }
		      return instance;
		  }
		  
		  
		  public void play() {
		    	 GameGUI gui = new GameGUI();
		    	 gui.inicialize();
		    	
		    	 while(true) {
		    		 if(gui.singlePlayer==true)System.out.println("tak mam mzmienê ");
		    		 
		    	 }
		    	 
		    	 
		    }
		  public void  listen() {
			  while(true) {
				  
			  }
		  }
		     
		     
		  public static boolean exit() {
			  return true;
		  }
		  
	      
		  public void makeMove(int x, int y) {
				xMoved=x;
				yMoved=y;
			   }
		  public  String getSize(int size) {
			  return String.valueOf(size);
		  }
		  public  String quit() {
			  return "QUIT";
			  
		  }
		  public  String pass() {
			  return "PASS";
		  }
		  public  String single() {
			  return "TYPE_SINGLE";
		  }
		  public  String multi() {
			  return "TYPE_MULTI";
		  }
		  public String sendMove() {
			 
			return "Move"+" "+String.valueOf(xMoved)+" "+String.valueOf(yMoved);
		  }
		  
		  
		  
